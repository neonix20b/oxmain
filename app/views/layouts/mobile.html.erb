<%construct=0%><!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
"http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
  <head>
    <meta http-equiv="Content-type" content="text/html; charset=utf-8" />
    <title>oxnull.net - mobile</title>
    <%= stylesheet_link_tag 'mobile' %>
    <%= javascript_include_tag :all %>
    <script src="http://video.oxnull.net/flowplayer.min.js" type="text/javascript"></script>
  </head>
  <body>
    <div id="vertical"></div>
    <div id="bodyimg">
      <div id="alldiv">
          <div id="header">
            <span class="menup"><%= link_to "Главная", {:controller=> 'mobile', :action => "hello", :rnd =>rand(100)}%></span> | 
            <% if logged_in? %>
              <span class="menup"><%= rlink "Мой сайт", {:controller=> 'mobile', :action => "index", :layer => 'mobile', :rnd =>rand(100)}%></span> | 
              <span class="menup"><%= rlink "FTP/MYSQL", {:controller=> 'mobile', :action => "about", :layer => 'mobile'}%></span> | 
              <span class="menup"><%= rlink "Услуги", {:controller=> 'wm', :action => "index", :layer => 'mobile', :rnd =>rand(100)}%></span> | 
            <%else%>
              <span class="menup"><%= rlink "Войти", {:controller=> 'account', :action => "login", :layer => 'mobile', :rnd =>rand(100)}%></span> | 
              <span class="menup"><%= rlink "Регистрация", {:controller=> 'account', :action => "signup",:layer => 'mobile'}%></span> | 
            <%end%>
            <span class="menup"><a href="http://offtop.oxnull.net/" target="_blank">Форум</a></span> | 
            <span class="menup"><a href="http://wiki.oxnull.net" target="_blank">Где я?</a></span> | 
            <% if logged_in? %>
              <span class="menup"><%= link_to "Выйти(#{current_user.login})", {:controller=> 'account', :action => "logout",:layer => 'mobile'}%></span>
            <%else%>
            <%end%>
          <span width="10px" height="10px"><%= spiner %></span>
		  </div>

          <div id="content">
            <% unless flash[:notice].blank? %>
              <div id="notification"><%= flash[:notice] %></div>
              <%= update_page_tag do |page|
                page.visual_effect :fade, 'notification', :duration => 15;
              end%>
            <% end %>
            <div id="main_div">
              <%= yield %>
            </div>
            <div id="videodiv"></div>
        </div>
      </div>
    </div>
    <script type="text/javascript">
      var gaJsHost = (("https:" == document.location.protocol) ? "https://ssl." : "http://www.");
      document.write(unescape("%3Cscript src='" + gaJsHost + "google-analytics.com/ga.js' type='text/javascript'%3E%3C/script%3E"));
    </script>
    <script type="text/javascript">
      try {
        var pageTracker = _gat._getTracker("UA-5504344-3");
        pageTracker._trackPageview();
      } catch(err) {}</script>
  </body>
</html>