<% title @post.title %>
<h5><%= link_to "Все блоги", blogs_path %> → <%= link_to @blog.name, blog_posts_path(@blog) %> → <%= @post.title %></h5>
<div>
  <%=tte @post.text.gsub(" --- ", ' ') %>
</div>
<hr style="width:95%;"/>
<div id="author_tag" style="color:white;">
  Автор: <%= author(@post) %> <%= show_time(@post.updated_at) %> <%= ox_rank_field(@post) %>
  <% if can_edit?(@post) %>
    <%= link_to "Редактировать", edit_blog_post_path(@blog, @post) %> |
    <%= link_to "Удалить", blog_post_path(@blog, @post), :confirm => 'Точно удалить?', :method => :delete %>
  <%end%>
  <br/>
  Теги: <%= tag_links(@post) %>
</div>
<br/>
<br/>
<h5>Комментарии(<%= @post.comments.size %>)</h5>
<div id="comments">
  <%= render :partial => 'comments', :locals => {:comments => @post.comments} %>
</div>